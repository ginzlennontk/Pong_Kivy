#:kivy 1.0.9

<PongBall>:
    size: 50, 50 
    canvas:
        Color:
            rgb: self.r, self.g, self.b
        Ellipse:
            pos: self.pos
            size: self.size          

<PongPaddle>:
    size: 25, 200
    canvas:
        Color:
            rgb: 1,1,1
        Rectangle:
            pos: self.pos
            size: self.size
        Color:
            rgb: 1,0,0
        Rectangle:
            pos: self.x , self.center_y - 50
            size: 25,100

<PongGame>:
    ball1: pong_ball1
    ball2: pong_ball2
    ball3: pong_ball3
    ball4: pong_ball4
    player1: player_left
    player2: player_right
    
    canvas:
        Rectangle:
            pos: self.center_x-5, 0
            size: 10, self.height
    
    Label:
        font_size: 70  
        center_x: root.width / 4
        top: root.top - 50
        text: str(root.player1.score)
        
    Label:
        font_size: 70  
        center_x: root.width * 3 / 4
        top: root.top - 50
        text: str(root.player2.score)
    
    PongBall:
        id: pong_ball1
        center: self.parent.center
        
    PongBall:
        id: pong_ball2
        center: self.parent.center
        
    PongBall:
        id: pong_ball3
        center: self.parent.center
        
    PongBall:
        id: pong_ball4
        center: self.parent.center
        
    PongPaddle:
        id: player_left
        x: root.x
        center_y: root.center_y
        
    PongPaddle:
        id: player_right
        x: root.width-self.width
        center_y: root.center_y
        

